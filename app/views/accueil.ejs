<%- include('partials/header') %>

<!-- Page Content -->
<div class="container container-main">

  <div class="row">

    <div class="col-lg-3">
      <%- include('partials/leftMenu') %>
    </div>
    <!-- /.col-lg-3 -->

    <div class="col-lg-9">

      <div class="row">

        <% for(const article of articles) { %>

          <div class="col-lg-4 col-md-6 mb-4">
            <div class="card h-100">
              <a href="/article/<%= article.id %>">
                <img class="card-img-top" src="./images/<%= article.name.toLowerCase() %>.png" alt="">
                <div class="badge-category badge badge-pill badge-<%= article.category.toLowerCase() %>"><%= article.category %></div>
              </a>
              <div class="card-body">
                <h4 class="card-title">
                  <a href="/article/<%= article.id %>"><%= article.name %></a>
                </h4>
                <h5>$<%= article.price %></h5>
                <p class="card-text"><%= article.description %></p>
              </div>
              <div class="card-footer">
                <small class="text-muted"><%- '&#9733;'.repeat(article.avg_note) %></small>
                <a href="/bookmarks/add/<%= article.id %>" class="link-add-bookmarks">+ Ajouter aux favoris</a>
              </div>
            </div>
          </div>

        <% } %>

      </div>
      <!-- /.row -->

    </div>
    <!-- /.col-lg-9 -->

  </div>
  <!-- /.row -->

</div>
<!-- /.container -->

<%- include('partials/footer') %>
